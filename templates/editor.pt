<!DOCTYPE html>
<html lang="en">
<head>
  <title>pyWebTex</title>

  <!-- Stylesheets -->
  <link href="../css/style.css" rel="stylesheet">
  <link href="../lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Libaries -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js" type="text/javascript"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js" type="text/javascript"></script> 
  <script src="../lib/pdf.js/pdf.js" type="text/javascript"></script>
  <script src="../lib/ace/ace.js" type="text/javascript" charset="utf-8"></script>
  <script src="../lib/bootstrap/js/bootstrap.js" type="text/javascript"></script>

  <!-- Own JavaScript -->
  <script src="../js/app.js" type="text/javascript" ></script>

</head>
<body>

 
<!-- New Document Dialog -->
<div id="newDocumentDialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="newDocumentDialogLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="newDocumentDialogLabel">New Document</h3>
  </div>

  <div class="modal-body">
    <p>Create a new document</p>
    <input class="filename" type="text" >
  </div>

  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="save-button btn btn-primary">Save changes</button>
  </div>
</div>

<!-- Settings Dialog -->
<div id="settingsDialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="settingsDialogLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="settingsDialogLabel">Settings</h3>
  </div>

  <div class="modal-body">
    <p>Example Setting</p>
  </div>

  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="save-button btn btn-primary">Save changes</button>
  </div>
</div>


<!-- Content-->
<div class="container-narrow">
  <div class="masthead">
  	<h3 class="muted">pyWebTeX</h3>
  	<div class="navbar">
  	  <div class="navbar-inner">
    		<div class="container">
    		  <ul class="nav">
      			<li class="active"><a href="#">Home</a></li>
      			<li><a href="#newDocumentDialog"  data-toggle="modal">New Document</a></li>
      			<li><a class="document-compile" href="#">Compile</a></li>
      			<li><a href="#settingsDialog" data-toggle="modal">Settings</a></li>
      			<li><a class="document-save" href="#">Save</a></li>
    		  </ul>
    		</div>
  	  </div>
  	</div></div>
  <hr>

  <div class="row-fluid marketing">
  	<h4>${filename}</h4>
    <div id="editor">${editorcontent}</div>
    <div id="pdfviewer">
    		<div class="pagination">
          <ul>
            <li><a  href="#" id="prev">&laquo;</a></li>
            <li><a> Page: <span id="page_num"></span> / <span id="page_count"></span> </a></li>
            <li><a href="#" id="next">&raquo;</a></li>
          </ul>
    	 	</div>
    		<div>
      		<canvas id="the-canvas" ></canvas>
    		</div></div>
  </div>

  <hr>

  <div class="footer">
  <p>&copy; Martin Zellner, 2013</p>
  </div>

</div>

</body>
</html>